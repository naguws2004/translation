import deepl
import asyncio

class GenericTranslator:
    def __init__(self):
        self.translator = deepl.Translator(auth_key="380c8d16-91c0-460e-8d68-cb19a189ea00:fx")

    async def translate_file(self, source_file, source_lang, target_lang):
        lines = []
        async with open(source_file, 'r') as f:
            async for line in f:
                line = line.strip()
                if line:
                    translated_line = await self.translate(line, source_lang, target_lang)
                    lines.append(translated_line)
                else:
                    lines.append(line)

        destination_file = source_file + ".converted"
        async with open(destination_file, 'w') as f:
            await f.write('\n'.join(lines))

    async def translate(self, source_text, source_lang, target_lang):
        result = await self.translator.translate_text(text=source_text,
                                                      source_lang=source_lang,
                                                      target_lang=target_lang)
        return result.text

# Usage example:
async def main():
    translator = GenericTranslator()
    await translator.translate_file("C:\\Users\\yerkala_n\\source\\repos\\Translator\\Translator\\python\\translate\\translations\\test.txt", "en", "es")

if __name__ == "__main__":
    asyncio.run(main())